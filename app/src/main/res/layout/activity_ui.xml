<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_marginTop="40dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="展示loading"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="80dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="展示loading（带参数）"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="177dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="展示toast（成功）"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="177dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="展示toast（失败）"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="177dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="展示一个按钮的dialog"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="177dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="展示二个按钮的dialog"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="177dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="展示协议dialog"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="177dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="展示一张图片dialog"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="177dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="向下展示popupWindow"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="177dp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="展示recycler选择弹窗（两列）"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="177dp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="展示recycler选择弹窗（三列）"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="177dp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
